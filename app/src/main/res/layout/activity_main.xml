<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pangge.traintest.MainActivity">
    <TextView
        android:id="@+id/fromText"
        android:text="@string/from_station"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
    <EditText
        android:id="@+id/from_station"
        android:layout_toEndOf="@id/fromText"

        android:layout_width="120dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/toText"
        android:text="@string/to_station"
        android:layout_toEndOf="@id/from_station"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/to_station"
        android:layout_toEndOf="@id/toText"


        android:layout_width="120dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="23sp"
        android:layout_below="@id/fromText"/>
    <Button
        android:id="@+id/ticket_query"
        android:text="@string/query"
        android:layout_below="@id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />





</RelativeLayout>
