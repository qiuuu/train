<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/from"
            android:layout_alignParentStart="true"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/to"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/train_code"
            android:layout_width="100dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@id/train_code"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="26dp" />
        <TextView
            android:id="@+id/time"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/train_code"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/start"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/from"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/arrive"
            android:layout_alignParentRight="true"
            android:layout_below="@id/to"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"/>
        <View
            android:id="@+id/di"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/start"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/seat1"
            android:layout_width="45dp"
            android:layout_height="match_parent"

            android:layout_below="@id/di"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/seat1_pri"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_below="@id/di"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/seat1" />

        <TextView
            android:id="@+id/seat2"
            android:layout_width="45dp"
            android:layout_height="match_parent"

            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/seat1_pri" />
        <TextView
            android:id="@+id/seat2_pri"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/di"
            android:layout_toEndOf="@id/seat2" />
        <TextView
            android:id="@+id/seat3"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="硬座"
            android:layout_below="@id/di"
            android:layout_toStartOf="@+id/seat3_pri"/>
        <TextView
            android:id="@id/seat3_pri"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/seat4"
            android:layout_toEndOf="@+id/time" />
        <TextView
            android:id="@id/seat4"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="无座"
            android:layout_below="@id/di"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/seat4_pri" />
        <TextView
            android:id="@id/seat4_pri"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_below="@id/di"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>